<% content_for :header_title do %>
  <b>Bill Information</b>
<% end %>

<table class="table colvis-data-table data-table">
  <thead>
    <tr>
      <th>Customer Name</th>
      <th>Bill Number</th>
      <th>Bill Date</th>
      <th>Due Date</th>
      <th>Amount</th>
      <th>Terms</th>
      <th>Location</th>
      <th>Department</th>
    </tr>
  </thead>
  <tbody>
    <% @bills.each do |bill| %>
      <tr>
        <td>
          <%= bill.vendor.name %></label>
        </td>
        <td>
            <%= bill.bill_number %>
        </td>
        <td><%= bill.bill_date.strftime("%d %B %Y") %> </td>
        <td><%= bill.due_date.strftime("%d %B %Y") %> </td>
        <td><%= bill.due_amount %> </td>
        <td><%= bill.payment_term.try(:name) %> </td>
        <td><%= bill.location.try(:name) %> </td>
        <td style="text-align: right;"><%= bill.department.try(:name) %> </td>
      </tr>
    <% end %>
  </tbody>
</table>
