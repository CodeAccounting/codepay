<!--body wrapper start-->
<div class="wrapper">
  <!-- page start-->
  <div class="panel">
    <header class="panel-heading head-border">
      Create A Bank Account
    </header>
    <% if flash[:errors] %>
    <div class="alert alert-danger">
      <ul>
        <% flash[:errors].each do |er| %>
        <li><%= er %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    <form id="account-form" action="<%= bank_accounts_path %>" method="post">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      <div class="panel-body">
        <div class="row toastr-row">
          <div class="col-md-4">
            <div class="form-group">
              <label class="control-label" for="account_name">Account Number </label>
              <input id="account_number" name="account[account_number]" type="text" class="form-control"  >
            </div>

            <div class="form-group">
              <label class="control-label" for="bank_name">Bank Name</label>
              <input id="bank_name" name="account[bank_name]" type="text" class="form-control"  >
            </div>
            <div class="form-group">
              <label class="control-label" for="available for payable">Available For Payable</label>
              <input id="payable" name="account[payable]" type="text" class="form-control">
            </div>
            <div class="form-group">
              <label class="control-label" for="default for payable">Default For Payable</label>
              <input id="default" name="account[default]" type="text" class="form-control">
            </div>
          </div>
          <div class="col-md-2">
            <div class="form-group">
              <label class="control-label" for="varification for receivable">Verification For Receivable</label>
              <input id="verify" name="account[receivable]" type="text" class="form-control">
            </div>

            <div class="form-group">
              <label class="control-label" for="status">Status</label>
              <input id="status" name="account[status]" type="text" class="form-control">
            </div>

            <div class="form-group">
              <label class="control-label" for="active">Active?</label>
              <input id="active" name="account[active]" type="text" class="form-control">
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <button type="submit" class="btn btn-success" id="cleartacct">Save Detail</button>
          <button type="button" class="btn btn-danger" onclick="clearEnteries('account-form')" >Clear Entries</button>
        </div>
      </div>
    </div>
  </form>
</div>
<!-- page end-->

<!--body wrapper end-->

