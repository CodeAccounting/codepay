<!-- page head start-->
<div class="page-head">
  <h3 class="m-b-less">
  Show Bank Accounts
  </h3>
  </div>
<!-- page head end-->

<!--body wrapper start-->
<div class="wrapper">
  <!-- page start-->
  <div class="panel">
    <header class="panel-heading head-border">
      Showing A Bank Account
    </header>    
    <!-- <a target="_blank" href= "<%= invoice_path(format: :pdf) %>"" class ="btn btn-default btn-success btn-lg"> DOWNLOAD PDF</a> -->

    <% if flash[:notice] %>
    <div class="alert alert-danger">
      <%= flash[:notice] %>
    </div>
    <% end %>
    <div class="panel-body">
      <div class="row toastr-row">
        <div class="col-md-4">
          <div class="form-group">
            <label class="control-label" for="account_number">Account Number </label>
            <input data-customers id="account_number" type="text" class="form-control"  placeholder="Customer Name" value="<%= @account.account_number %>" readonly>
          </div>
          <div class="form-group">
            <label class="control-label" for="bank_name">Bank Name</label>
            <input id="bank_name" name="account[account_name]" type="text" class="form-control" value="<%= @account.bank_name%>" readonly >
          </div>
          <div class="form-group">
            <label class="control-label" for="payable">Available For Payable</label>
            <input id="payable" name="account[account_payable]" class="form-control" value="<%= @account.payable%>" readonly >
          </div>
          <div class="form-group">
            <label class="control-label" for="default">Available For Payable</label>
            <input id="default" name="account[account_default]" class="form-control" value="<%= @account.default%>" readonly >
          </div>
          <div class="form-group">
            <label class="control-label" for="receivable">Available For Receivable</label>
            <input id="receivable" name="account[account_receivable]" class="form-control"  value="<%= @account.receivable %>" readonly >
          </div>
        </div>
        <div class="col-md-2">
          <div class="form-group" id="toastTypeGroup">
            <label>Status</label>
              <input id="status" name="account[account_status]"  class="form-control"  value="<%= @account.status %>" readonly >
          </div>
          <div class="form-group">
            <label class="control-label" for="hideEasing">Active?</label>
              <input id="active" name="account[account_active]"  class="  form-control"  value="<%= @account.active %>" readonly >
          </div>
        </div>
        <div class="row">
        <div class="col-md-12">
          <a href="<%= bank_accounts_path %>" class="btn btn-success">Back</a>
        </div>
      </div>
      </div>
    </div>
  </div>
</div>
