<!-- page head start-->
<div class="page-head">
  <h3 class="m-b-less">
   Credit Detail
  </h3>
</div>
<!-- page head end-->


<div class="wrapper">
  <div class="row">
    <div class="col-sm-12">
      <div class="panel">
        <header class="panel-heading head-border">
          Showing credit for a vendor bill 
        </header>
        <% if flash[:errors] %>
        <div class="alert alert-danger">
          <ul>
            <% flash[:errors].each do |er| %>
            <li><%= er %></li>
            <% end %>
          </ul>
        </div>
        <% end %>

        <!-- <form id="mannual_bill_credit_form" action="<%#= credits_path%>" method="post">
          <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>"> -->
          <div class="panel-body">
            <div class="row toastr-row">
              <div class="col-md-4">
                <div class="form-group">
                  <label class="control-label" for="vendor">Vendor</label>
                  <input id="vendor_name" type="text" class="form-control"  placeholder="Vendor Name" value="<%= @credit.vendor.name %>" readonly>
                </div>
                <div class="form-group bill_select">
                  <label class="control-label" for="bill_number">Bill Number</label>
                  <input id="bill_number" type="text" class="form-control"  placeholder="Bill Number" value="<%= @credit.bill.bill_number %>" readonly>
                </div>

                <div class="form-group">
                  <label class="control-label" for="credit_date">Date</label>
                  <input id="credit_date" class="form-control" value="<%= @credit.credit_date.strftime("%d-%B-%Y") %>" readonly >
                </div>

                <div class="form-group">
                  <label class="control-label" for="credit_amount">Credit Amount</label>
                  <input id="credit_amount" type="number" class="form-control" step="0.01" value="<%= @credit.credit_amount %>" readonly>
                </div>

                <div class="form-group">
                  <label class="control-label" for="credit_amount">Status</label>
                  <input id="credit_amount" type="text" class="form-control" value="<%= @credit.credit_status %>" readonly>
                </div>
              </div>
              <div class="col-md-4">
                <div class="form-group">
                  <label class="control-label" for="hideEasing">Message</label>
                   <textarea id="credit_message" name="credit[message]" rows="3" class="form-control" placeholder="Enter a message..." readonly><%=@credit.message %></textarea>
                </div>
              </div>
              <div class="col-md-12">
                <!-- <button type="submit" class="btn btn-success" id="cleartoasts">Save</button> -->
                <a href="<%=credits_path%>" type="button" class="btn btn-danger">back</a>
              </div>
            </div>    
          </div>
        <!-- </form> -->
      </div>
    </div> 
  </div>  
</div>