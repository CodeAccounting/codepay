<% content_for :header_title do %>
  <b>Invoice Information Preview</b>
<% end %>
<br/>
<div class="col-md-4">
  <div class="form-group">
    <label class="control-label" for="customer_name">Customer Name:</label> <b><%= @customer_name %></b>
  </div>

  <div class="form-group">
    <label class="control-label" for="invoice_number">Invoice #:</label> <b><%= @values[:invoice_number] %></b>
  </div>

  <div class="form-group">
    <label class="control-label" for="invoice_date">Invoice Date:</label> <b><%= @values[:invoice_date].present? ? @values[:invoice_date].to_date.strftime("%d-%B-%Y") : "" %></b>
  </div>

  <div class="form-group">
    <label class="control-label" for="invoice_due_date">Due Date:</label> <b><%= @values[:due_date].present? ? @values[:due_date].to_date.strftime("%d-%B-%Y") : "" %></b>
  </div>

  <div class="form-group">
    <label class="control-label" for="invoice_amount">Amount:</label> <b><%= @values[:due_amount] %></b>
  </div>

  <div class="form-group">
    <label for="customer_contact">Location:</label> <b><%= @location%></b>
  </div>

  <div class="form-group">
    <label for="customer_contact">Terms:</label> <b><%= @payment_term%></b>
  </div>

  <div class="form-group">
    <label for="customer_contact">Department:</label> <b><%= @department%></b>
  </div>

  <div class="form-group">
    <label class="control-label" for="invoice_message">Message:</label> <b><%= @values[:message] %></b>
  </div>

</div>

<div class="col-md-4">

</div>

<br/>
