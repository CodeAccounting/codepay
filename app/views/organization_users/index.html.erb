<!-- page head end-->

<div class="wrapper">
	<div class="row">
		<div class="col-sm-12">
      <section class="panel">
      	<header class="panel-heading ">
          <span class="tools pull-right">
            <a class="fa fa-repeat box-refresh" href="javascript:;"></a>
            <a class="t-close fa fa-times" href="javascript:;"></a>
          </span>
          <div class="DTTT btn-group">
            <% if can? :create, User %>
              <a class="btn btn-success" href="<%= new_organization_user_path %>">Add New User</a>
            <% end %>
          </div>
        </header>
        <table class="table colvis-data-table data-table">
          <thead>
            <tr>
              <th>User</th>
              <th>Role Name</th>
              <th>Joined at</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <% unless user.id == current_user.id %>
                <tr>
                	<td><%= link_to (user.full_name+" ("+user.email+")"), organization_user_path(user) %></td>
                  <td>
                    <%= user.which_role?(current_organization.id).capitalize %>
                  </td>
                  <% if user.invitation_accepted_at.present? %>
                	 <td><%= user.invitation_accepted_at.strftime("%d %B %Y") %></td>
                  <% else %>
                    <td>Not Joined Yet</td>
                  <% end %>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </section>
    </div>
	</div>
</div>