<div class="login-body">
  <div class="login-logo">
    <%= image_tag("logo-icon.png") %> CodePayer
  </div>
  <h2 class="form-heading">Please fill your detail below.</h2>

  <div class="container log-row">

<%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { class: "form-signin", :method => :put } do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :invitation_token %>

  <label for="user_first_name">First Name</label>
  <%= f.text_field :first_name, id: "user_first_name", class: "form-control", placeholder: "First Name", autofocus: true %>

  <label for="user_last_name">Last Name</label>
  <%= f.text_field :last_name, id: "user_last_name", class: "form-control", placeholder: "Last Name" %>

  <% if f.object.class.require_password_on_accepting %>
  <label for="user_email">Password</label>
  <%= f.password_field :password, class: "form-control", placeholder: "Password", autocomplete: false %>

  <label for="user_email">Password Confirmation</label>
  <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Password Confirmation", autocomplete: false %>
  <% end %>

  <button id="user-registration-button" class="btn btn-lg btn-success btn-block" type="submit">
    Submit
  </button>
<% end %>
<br>
