 <!-- page head start-->
<div class="page-head">
  <h3 class="m-b-less">
  News
  </h3>
</div>
<!-- page head end-->

<!--body wrapper start-->
<div class = "wrapper">
  <div class = "panel">
    <% if flash[:errors].present? %>
      <div class="alert alert-danger">
        <ul>
          <% flash[:errors].each do |er| %>
          <li><%= er %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class ="row"> 
      <div class="col-sm-12">
        <header class="panel-heading head-border">
          Listing All News
        </header>
        <div class="panel-body">
          <div>
            <table class="table colvis-data-table data-table">
              <thead>
                <tr>
                  <th>Subject</th>
                  <th>Description</th>
                  <th>Show</th>
                  <th>Created_At</th>
                </tr>
              </thead>
              <tbody>
                <%@news.each do |news|%>
                  <tr>
                    <td><%= news.subject%></td>
                    <td><%= truncate(news.description, length: 40 )%></td>
                    <td><%= link_to 'See News Here', news_path(news.id) %></td>
                    <td><%= news.created_at.strftime("%d %B %Y")%></td>
                  </tr>
                <%end%>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>  
<!--body wrapper send