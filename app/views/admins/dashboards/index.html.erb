 <% if flash[:notice] or flash[:error] %>
    <div class="alert alert-danger fade in">
     <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
     <%= flash[:notice] %>
     <%= flash[:error] %>
    </div>
  <%end%>

  	<div class="wrapper">
      <div class="row">
        <div class="col-md-6" >
      	  <% if can? :manage, Admins::BillPayRequestsController %>
        	  <%= render "to_do_list" %>
          <%end%>
        </div>
        <%if can? :show, Admins::NewsController%>
          <div class="col-md-6">
            <%= render "news" %>
          </div>
        <%end%>
      </div>
   	</div>
<!--body wrapper end-->
